<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:padding="10dp"
            app:cardBackgroundColor="@color/newcolor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.21">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

            <ImageView
                    android:id="@+id/ImageViewId"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@string/app_name"
                    app:srcCompat="@mipmap/button" />

            <TextView
                    android:id="@+id/ListJobName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="97dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/ImageViewId"
                    android:text="Job Name"
                    android:textAlignment="center"
                    android:textColor="@color/design_default_color_primary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/ListAssignedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ListJobName"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/ImageViewId"
                    android:text="AssignedBy" />

            <TextView
                    android:id="@+id/ListDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/ImageViewId"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"
                    android:text="Date: 13 July 2019"

                    />

            <Button
                    android:id="@+id/EditButton"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="35dp"
                    android:background="@android:drawable/ic_menu_edit"
                    android:elevation="11dp" />

            android:layout_marginBottom="-1dp"
            android:layout_marginLeft="40dp"
            />

            <Button
                    android:id="@+id/DeleteButton"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"

                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="9dp"
                    android:background="@android:drawable/ic_delete" />

            <TextView
                    android:id="@+id/ListAssignedTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ListAssignedBy"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/ImageViewId"
                    android:text="AssignedTo"
                    android:textStyle="italic" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>